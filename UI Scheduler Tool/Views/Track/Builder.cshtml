@{
    ViewBag.Title = "Track Builder";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Block Scheduler</title>
    <script src="http://ajax.microsoft.com/ajax/jQuery/jquery-1.5.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/Track.css" />
    <script src="~/Scripts/Preq.js" type="text/javascript"></script>
    <script>
        $(document).ready(function (e) {
            Preq.matrix = new TrackMatrix();

            $("#search").click(function (event) {
                Preq.matrix = new TrackMatrix();
                Preq.matrix.loadSeed($("#query").val());
            });
        });
    </script>

    <script></script>
</head>
<body>
    <div class="search">
        Section: <input id="query" type="text" name="Query"/>
        <input id="search" type="submit" value="Search">
    </div>

    <div id="matrix">
        <h3>Track</h3>
        <button onclick="Preq.matrix.shiftSelectedSemester(-1)"><</button>
        <button onclick="Preq.matrix.shiftSelectedSemester(+1)">></button>
        <br />
        @for(int i = 0; i < 8; i++)
        {
            <ul id="semester-@(i)" class="semester"></ul> 
        }
    </div>
    <div id="errors">
        <h3>Errors</h3>
        <ul id="error-list" class="error"></ul>
    </div>
    <div id="courses">
        <h3>Courses</h3>
        <ul id="course-pool" class="course"></ul>
    </div>
</body>
</html>