@using UI_Scheduler_Tool.Models
@model List<Course>
<div id="courseList">
    @if (Model.Count > 0)
    {
        <table class="grid">
            <tr>
                <th>Course Name</th>
                <th>Course Number</th>
                <th>Credit Hours</th>
            </tr>
            @foreach (var course in Model)
            {
                <tr>
                    <td class="left">@course.CourseName</td>
                    <td class="left">@course.CourseNumber</td>
                    <td class="left">@course.CreditHours</td>
                </tr>
            }
        </table>
    }
    else
    {
        <h1>No Courses Found</h1>
    }
</div>