@{
    ViewBag.Title = "View Current Courses";    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    @Html.ActionLink("Admin Page", "AdminPage", "Admin", null, new { @class = "btn btn-default" })
    <div>
        <table class="grid">
            <tr>
                <th>Course Name</th>
                <th>Course Number</th>
                <th>Credit Hours</th>
            </tr>
            @foreach (var course in ViewBag.courses)
            {
                <tr>
                    <td class="left">@course.CourseName</td>
                    <td class="left">@course.CourseNumber</td>
                    <td class="left">@course.CreditHours</td>
                </tr>
            }
        </table>
    </div>
    @Html.ActionLink("Admin Page", "AdminPage", "Admin", null, new { @class = "btn btn-default" })
</body>
</html>
